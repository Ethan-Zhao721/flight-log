{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",      
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,            
    "resolveJsonModule": true,  
    "isolatedModules": true,    
    "types": ["jest", "node"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]   
}